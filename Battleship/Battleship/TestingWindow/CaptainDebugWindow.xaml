                <local:Cell LocationId="95" AttackCode="{Binding PlayerGameBoard[5][9]}" />
                <local:Cell LocationId="96" AttackCode="{Binding PlayerGameBoard[6][9]}" />
                <local:Cell LocationId="97" AttackCode="{Binding PlayerGameBoard[7][9]}" />
                <local:Cell LocationId="98" AttackCode="{Binding PlayerGameBoard[8][9]}" />
                <local:Cell LocationId="99" AttackCode="{Binding PlayerGameBoard[9][9]}" />
            </UniformGrid>

            <Ellipse Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" x:Name="AIPatrolHorizontal" Visibility="{Binding PlayerShipVisibility[0], Converter={StaticResource BooleanToVisibilityConverter}}"/>
            <Ellipse Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" x:Name="AIDestroyerHorizontal" Visibility="{Binding PlayerShipVisibility[1], Converter={StaticResource BooleanToVisibilityConverter}}"/>
            <Ellipse Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" x:Name="AISubmarineHorizontal" Visibility="{Binding PlayerShipVisibility[2], Converter={StaticResource BooleanToVisibilityConverter}}"/>
            <Ellipse Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="4" x:Name="AIBattleshipHorizontal" Visibility="{Binding PlayerShipVisibility[3], Converter={StaticResource BooleanToVisibilityConverter}}"/>
            <Ellipse Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="5" x:Name="AIAircraftCarrierHorizontal" Visibility="{Binding PlayerShipVisibility[4], Converter={StaticResource BooleanToVisibilityConverter}}"/>

            <Ellipse Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" x:Name="AIPatrolVertical" Visibility="{Binding PlayerShipVerticalVisibility[0], Converter={StaticResource BooleanToVisibilityConverter}}"/>
            <Ellipse Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" x:Name="AIDestroyerVertical" Visibility="{Binding PlayerShipVerticalVisibility[1], Converter={StaticResource BooleanToVisibilityConverter}}"/>
            <Ellipse Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" x:Name="AISubmarineVertical" Visibility="{Binding PlayerShipVerticalVisibility[2], Converter={StaticResource BooleanToVisibilityConverter}}"/>
            <Ellipse Grid.Row="0" Grid.Column="1" Grid.RowSpan="4" x:Name="AIBattleshipVertical" Visibility="{Binding PlayerShipVerticalVisibility[3], Converter={StaticResource BooleanToVisibilityConverter}}"/>
            <Ellipse Grid.Row="0" Grid.Column="1" Grid.RowSpan="5" x:Name="AIAircraftCarrierVertical" Visibility="{Binding PlayerShipVerticalVisibility[4], Converter={StaticResource BooleanToVisibilityConverter}}"/>

        </Grid>

        <CheckBox IsChecked="{Binding ShowShips}" Grid.Row="2" Grid.Column="0">Show Ships</CheckBox>

        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="2">
            <TextBlock Text="AI Record:"/>
            <TextBlock Text="{Binding AIWins}"/>
            <TextBlock Text=" - "/>
            <TextBlock Text="{Binding AILosses}"/>
        </StackPanel>

        <Button Content="New Game" Command="{Binding NewGameCommand}" Grid.Row="3" Grid.Column="0"/>
        <Button Content="Ready" Command="{Binding StartGameCommand}" Grid.Row="3" Grid.Column="0" Visibility="{Binding GameState, Converter={StaticResource GameStateToReadyButtonVisibilityConverter}}"/>
    </Grid>
</Window>
